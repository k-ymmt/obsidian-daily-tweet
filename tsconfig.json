{
    "compilerOptions": {
        "baseUrl": "src",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2016",
        "allowJs": true,
        "jsx": "react-jsx",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7",
            "ES2015"
        ]
    },
    "include": [
        "**/*.ts"
    ]
}
